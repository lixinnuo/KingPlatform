@{
    ViewBag.Title = "Warning";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        getPoList();
    });

    function getPoList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/HuaweiOrderManage/FindPOList/PostPOList",
            postData: { poStatusValue: "huaweiPublishOrder", warningStatus: "new_po_undeal_more_than_3_days" },
            height: $(window).height() - 128,
            colModel: [
                {
                    label: '订单号', name: 'poNumber', width: 100, align: 'left',
                    formatter: function (cellvalue, options, rowObject) {
                        return "<a onclick=\"viewDetails('" + cellvalue + "','" + rowObject.poLineNum + "')\" style='cursor:pointer;color:blue;'>" + cellvalue + "</a>";
                    }
                },
                { label: '订单', name: 'poLineNum', width: 30, align: 'left' },
                { label: '编码', name: 'itemCode', width: 70, align: 'left' },
                { label: '描述', name: 'itemDescription', width: 450, align: 'left' },
                { label: '需求数量', name: 'quantity', width: 80, align: 'left' },
                { label: '已收货数量', name: 'quantityReceived', width: 80, align: 'left', hidden: true },
                {
                    label: '下发日期', name: 'publishDate', width: 120, align: 'left',
                    formatter: "date", formatoptions: { srcformat: 'Y-m-d H:i:s', newformat: 'Y-m-d H:i:s' }
                },
                {
                    label: '承诺日期', name: 'promiseDate', width: 120, align: 'left',
                    formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' }
                },
                { label: '币种', name: 'currencyCode', width: 50, align: 'left' },
                { label: '单价', name: 'priceOverride', width: 50, align: 'left' },
                { label: '数量', name: 'quantity', width: 50, align: 'left' },
                {
                    label: '小计', name: 'totalPrice', width: 50, align: 'left',
                    formatter: function (cellvalue, options, rowObject) {
                        return rowObject.quantity * rowObject.priceOverride;
                    }
                },
                { label: '单位', name: 'unitOfMeasure', width: 50, align: 'left' },
                { label: '收货地点', name: 'shipToLocation', width: 550, align: 'left' },
                { label: '采购员', name: 'agentName', width: 250, align: 'left' },
                { label: '备注', name: 'remark', width: 200, align: 'left' }
            ],
            pager: "#gridPager",
            multiselect: true,
            rowNum: 18,
            rowList: {},
            autoScroll: true,
            viewrecords: true,
            gridComplete: function () {
                $('#ajax-loader').fadeOut();
                $("input[type='checkbox']").removeClass('checkbox');
            },
            onPaging: function (pgButton) {
                $("#choseNum").html(0);
                $('#ajax-loader').fadeIn();
            }
        });
        $("#time_horizon a.btn-default").click(function () {
            $("#time_horizon a.btn-default").removeClass("active");
            $(this).addClass("active");
            $('#btn_search').trigger("click");
        });
        $("#btn_search").click(function () {
            var timeType = $("#time_horizon a.active").attr('data-value');
            var queryJson = {
                keyword: $("#txt_keyword").val(),
                keyValue: $("#time_horizon a.active").attr('data-value'),
            }
            $('#ajax-loader').fadeIn();
            $gridList.jqGrid('setGridParam', {
                url: "/HuaweiOrderManage/FindPOList/PostPOList",
                postData: queryJson,
            }).trigger('reloadGrid');
        });
    }

    function viewDetails(poNumber, poLineNum) {
        $.modalOpen({
            id: "Details",
            title: "订单详细信息",
            url: "/HuaweiOrderManage/FindPOList/PODetails?poNumber=" + poNumber + "&poLineNum=" + poLineNum + "&types=NewPOList",
            width: "700px",
            height: "550px",
            btn: null,
        });
    }

</script>
<div id="ajax-loader">
    <img src="~/Content/img/ajax-loader.gif" />
</div>
<div class="topPanel">
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
                <td style="padding-left: 10px;">
                    <div id="time_horizon" class="btn-group">
                        <a class="btn btn-default active" data-value="new_po_undeal_more_than_3_days">新订单超三天未处理</a>
                        <a class="btn btn-default" data-value="po_no_arrive_more_than_6_monthes">预计两周内到货</a>
                        <a class="btn btn-default" data-value="po_no_arrive_more_than_6_monthes">下单六个月未交货</a>
                        <a class="btn btn-default" data-value="po_warning_overdue">过期PO</a>
                    </div>
                </td>
            </tr>
        </table>
    </div>
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>
