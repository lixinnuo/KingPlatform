@{
    ViewBag.Title = "POBoard";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    $(function () {
        $.ajax({
            url: "/HuaweiOrderManage/FindPOList/FindPOBoard",
            data: { },
            dataType: "json",
            async: false,
            success: function (data) {
                $('#ajax-loader').fadeOut();
                $("#form1").formSerialize(data);
                $("#form1").find('.form-control,input').attr('readonly', 'readonly');
            }
        });
        $("a").click(function () {
            var dataHref = $(this).data("href");
            var dataId = $(this).data("id");
            var dataName = $(this).data("name");
            parent.window.newIframe(dataId, dataHref, dataName);
        });
    });
</script>
<div id="ajax-loader">
    <img src="~/Content/img/ajax-loader.gif" />
</div>
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <table class="table">
            <tr>
                <th class="col-md-4">状态</th>
                <th class="col-md-4">数量</th>
                <th class="col-md-4 text-center">处理</th>
            </tr>
            <tr>
                <th class="col-md-4">新订单</th>
                <td class="col-md-4">
                    <input id="newOrderQuantity" name="newOrderQuantity" type="text" class="form-control" />
                </td>
                <td class="col-md-4 text-center">
                    <a href="javascript:void()" data-name="新PO列表" data-id="2bcb1fef-78f4-4a44-a0b8-4a0355d78a7a" data-href="/HuaweiOrderManage/FindPOList/News">查看</a>
                </td>
            </tr>
            <tr>
                <th class="col-md-4">华为订单取消</th>
                <td class="col-md-4">
                    <input id="cancelOrderQuantity" name="cancelOrderQuantity" type="text" class="form-control" />
                </td>
                <td class="col-md-4 text-center">
                    <a href="javascript:void()" data-name="取消PO列表" data-id="b7eb5f85-4890-41d0-a59a-1570f7f6cfb9" data-href="/HuaweiOrderManage/FindPOList/Cancel">查看</a>
                </td>
            </tr>
            <tr>
                <th class="col-md-4">华为订单变更</th>
                <td class="col-md-4">
                    <input id="changedOrderQuantity" name="changedOrderQuantity" type="text" class="form-control" />
                </td>
                <td class="col-md-4 text-center">
                    <a href="javascript:void()" data-name="变更PO列表" data-id="d26d8152-3441-42fe-ac9e-d2c08201685d" data-href="/HuaweiOrderManage/FindPOList/Change">查看</a>
                </td>
            </tr>
            <tr>
                <th class="col-md-4">在途订单</th>
                <td class="col-md-4">
                    <input id="intransitOrderQuantity" name="intransitOrderQuantity" type="text" class="form-control" />
                </td>
                <td class="col-md-4 text-center">
                    <a href="javascript:void()" data-name="在途PO列表" data-id="cbbf8982-92f5-472b-ab2c-ac151d203860" data-href="/HuaweiOrderManage/FindPOList/Onway">查看</a>
                </td>
            </tr>
            <tr>
                <th class="col-md-4">过期订单</th>
                <td class="col-md-4">
                    <input id="overdueOrderQuantity" name="overdueOrderQuantity" type="text" class="form-control" />
                </td>
                <td class="col-md-4 text-center">
                    <a href="javascript:void()" data-name="预警PO列表" data-id="0daf345b-8519-4a1d-acb5-a17406ed235c" data-href="/HuaweiOrderManage/FindPOList/Warning">查看</a>
                </td>
            </tr>
            <tr>
                <th class="col-md-4">新订单超三天未处理</th>
