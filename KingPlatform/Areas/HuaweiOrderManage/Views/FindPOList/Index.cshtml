@{
    ViewBag.Title = "POBoard";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    $(function () {
        $.ajax({
            url: "/HuaweiOrderManage/FindPOList/FindPOBoard",
            data: { },
            dataType: "json",
            async: false,
            success: function (data) {
                $('#ajax-loader').fadeOut();
                $("#form1").formSerialize(data);
                $("#form1").find('.form-control,input').attr('readonly', 'readonly');
            }
        });
        $("a").click(function () {
            dataid = $(this).data("href");
            parent.window.newIframe(dataid);
        });
    });
</script>
<div id="ajax-loader">
    <img src="~/Content/img/ajax-loader.gif" />
</div>
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <table class="table">
            <tr>
                <th class="col-md-4">状态</th>
                <th class="col-md-4">数量</th>
                <th class="col-md-4 text-center">处理</th>
            </tr>
            <tr>
                <th class="col-md-4">新订单</th>
                <td class="col-md-4">
                    <input id="newOrderQuantity" name="newOrderQuantity" type="text" class="form-control" />
                </td>
                <td class="col-md-4 text-center">
                    <a href="javascript:void()" data-href="/HuaweiOrderManage/FindPOList/News">查看</a>
                </td>
            </tr>
            <tr>
                <th class="col-md-4">华为订单取消</th>
                <td class="col-md-4">
                    <input id="cancelOrderQuantity" name="cancelOrderQuantity" type="text" class="form-control" />
                </td>
                <td class="col-md-4 text-center">
                    <a href="javascript:void()" data-href="/HuaweiOrderManage/FindPOList/Cancel">查看</a>
                </td>
            </tr>
            <tr>
                <th class="col-md-4">华为订单变更</th>
                <td class="col-md-4">
                    <input id="changedOrderQuantity" name="changedOrderQuantity" type="text" class="form-control" />
                </td>
                <td class="col-md-4 text-center">
                    <a href="javascript:void()" data-href="/HuaweiOrderManage/FindPOList/Change">查看</a>
                </td>
            </tr>
            <tr>
                <th class="col-md-4">在途订单</th>
                <td class="col-md-4">
                    <input id="intransitOrderQuantity" name="intransitOrderQuantity" type="text" class="form-control" />
                </td>
                <td class="col-md-4 text-center">
                    <a href="javascript:void()" data-href="/HuaweiOrderManage/FindPOList/Onway">查看</a>
                </td>
            </tr>
            <tr>
                <th class="col-md-4">过期订单</th>
                <td class="col-md-4">
                    <input id="overdueOrderQuantity" name="overdueOrderQuantity" type="text" class="form-control" />
                </td>
                <td class="col-md-4 text-center">
                    <a href="javascript:void()" data-href="/HuaweiOrderManage/FindPOList/Warning">查看</a>
                </td>
            </tr>
            <tr>
                <th class="col-md-4">新订单超三天未处理</th>
                <td class="col-md-4">
                    <input id="expiredOrderQuantity" name="expiredOrderQuantity" type="text" class="form-control" />
                </td>
                <td class="col-md-4 text-center">
                    <a href="javascript:void()" data-href="/HuaweiOrderManage/FindPOList/Warning">查看</a>
                </td>
            </tr>
            <tr>
                <th class="col-md-4">下单六个月未交货</th>
                <td class="col-md-4">
                    <input id="nonDeliveryOrderQuantity" name="nonDeliveryOrderQuantity" type="text" class="form-control" />
                </td>
                <td class="col-md-4 text-center">
                    <a href="javascript:void()" data-href="/HuaweiOrderManage/FindPOList/Warning">查看</a>
                </td>
            </tr>
        </table>
    </div>
</form>
