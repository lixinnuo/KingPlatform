@{
    ViewBag.Title = "Onway";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        getPoList();
    });

    function getPoList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/HuaweiOrderManage/FindPOList/PostPOList",
            postData: { poStatusValue: "all", shipmentValue: "OPEN" },
            height: $(window).height() - 128,
            colModel: [
                { label: '订单号', name: 'poNumber', width: 100, align: 'left' },
                { label: '订单行号', name: 'poLineNum', width: 50, align: 'left' },
                { label: '编码', name: 'itemCode', width: 80, align: 'left' },
                { label: '描述', name: 'itemDescription', width: 350, align: 'left' },
                { label: '数量', name: 'needQuantity', width: 80, align: 'left' },
                {
                    label: '下发日期', name: 'publishDate', width: 120, align: 'left',
                    formatter: "date", formatoptions: { srcformat: 'Y-m-d H:i:s', newformat: 'Y-m-d H:i:s' }
                },
                {
                    label: '承诺日期', name: 'promiseDate', width: 80, align: 'left', editable:true,
                    formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' }
                },
                {
                    label: '有效日期', name: 'expireDate', width: 80, align: 'left',
                    formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' }
                },
                { label: '收货地点', name: 'shipToLocation', width: 350, align: 'left' },
                { label: '采购员', name: 'agentName', width: 80, align: 'left' },
                { label: '备注', name: 'remark', width: 200, align: 'left' }
            ],
            pager: "#gridPager",
            multiselect: true,
            rowNum: 100,
            autoScroll: true,
            viewrecords: true,
            gridComplete: function () {
                $('#ajax-loader').fadeOut();
                $("input[type='checkbox']").removeClass('checkbox');
            },
            onCellSelect: function (rowid, iCol, cellcontent, e) {
                var ids = $("#gridList").jqGrid("getGridParam", "selarrrow");
                if ($.inArray(rowid, ids) >= 0) {
                    $("#choseNum").html(ids.length - 1);
                }
                else {
                    $("#gridList").editRow(rowid, true);
                    //$(".form-control").attr('style', $(".form-control").attr('style').replace('height: 34px;', ''));
                    $("#choseNum").html(ids.length + 1);
                }
            },
            onSelectAll: function (aRowids, status) {
                var ids = $("#gridList").jqGrid("getGridParam", "selarrrow");
                $("#choseNum").html(ids.length);
            },
            onPaging: function (pgButton) {
                $('#ajax-loader').fadeIn();
            }
        });
    }

    function btn_update() {
        var ids = $("#gridList").jqGrid("getGridParam", "selarrrow");
        var promiseDate = new Array();
        for (var i = 0; i < ids.length; i++) {
            promiseDate[i] = $('#' + ids[i] + '_promiseDate').val();
        }
        ids = ids.join("#");
        promiseDate = promiseDate.join("#");
        $.modalConfirm("您确定要提交这些订单变更么？", function (r) {
            if (r) {
                $.submitForm({
                    url: "/HuaweiOrderManage/FindPOList/OnwayPOList",
                    param: { ids: ids, promiseDate: promiseDate, types: "OnwayList" },
                    success: function () {
                        $('#ajax-loader').fadeIn();
                        window.location.reload();
                        //$.currentWindow().$("#gridList").trigger("reloadGrid");
                    }
                })
            }
        });
        
    }

</script>
<div id="ajax-loader">
    <img src="~/Content/img/ajax-loader.gif" />
</div>
<div class="topPanel">
    <div class="search">
        <span>在途PO列表</span>
    </div>
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">在途PO列表</li>
                <li class="first">已选中<span id="choseNum">0</span>项</li>
                <li><a id="NF-btn_details" authorize="yes" onclick="btn_update()"><i class="fa fa-pencil-square-o"></i>处理</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>
